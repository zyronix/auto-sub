#import autosub
#import time
#import cgi

<html>
<head>
	<title>AutoSub</title>
</head>
<script language="JavaScript">

function clickFirstButton(divname,title,season)
    {
      document.getElementById(divname).innerHTML = "<input type=button value='Skip " + title + "' onClick=location.href='/config/skipShow/" + title + "/0' >\
      <input type=button value='Skip " + title + " Season " + season + "' onClick=location.href='/config/skipShow/" + title + "/" + season +"' >";
    }
</script>
<body>
<a href='runNow'>Run Everything Now</a>
<p>
<a href='shutdown'>Shutdown</a>
<p>

#if $len($autosub.WANTEDQUEUE) >= 1
<form>
<b>Wanted queue:</b>
<table border=1>
<tr>
	<td>Show name</td>
	<td>Season</td>
	<td>Episode</td>
	<td>Quality</td>
</tr>
#set $counter = 1
#for $var in $autosub.WANTEDQUEUE
#set $divname = "skipshow-" + $var['title'] + $var['season'] + $var['episode'] + $var['quality'] + str($counter)
#set $counter = $counter + 1
#set $functionname = "clickFirstButton(" + "'" + $divname + "'" + "," + "'" + $var['title'] + "'" + "," + "'" + $var['season'] + "'" +  ")"
<tr>
<td>$var['title']</td>
<td>$var['season']</td>
<td>$var['episode']</td>
<td>$var['quality']</td>
<td><input type="button" value="Skip Show" name="$var['season']" onClick="$functionname">
</tr>
<tr>
	<td colspan="5" >
		<div ID="$divname"></div>
	</td>
</tr>

</tr>
#end for
</table>
#end if
<p>
#if $len($autosub.LASTESTDOWNLOAD) >= 1
<b>Last 10 subtitle:</b>
<table border=1>
<tr>
	<td>Show name</td>
	<td>Season</td>
	<td>Episode</td>
	<td>Quality</td>
</tr>
#for $var in $autosub.LASTESTDOWNLOAD
<tr>
<td>$var['title']</td>
<td>$var['season']</td>
<td>$var['episode']</td>
<td>$var['quality']</td>
</tr>
</form>
#end for
</table>
#end if
<p>
<table>
<tr>
	<td>
		Next RSSCheck in:
	</td> 
	<td>
		$time.strftime('%H:%M:%S', $time.gmtime(($autosub.CHECKRSS.interval - ($time.time() - $autosub.CHECKRSS.lastrun) ))) <br>
	</td>
</tr>
<tr>
	<td>
		Next ScanDisk in: 
	</td>
	<td>
		$time.strftime('%H:%M:%S', $time.gmtime(($autosub.SCANDISK.interval - ($time.time() - $autosub.SCANDISK.lastrun) ))) <br>
	</td>
</tr>
<tr>
	<td>
		Next CheckSub in: 
	</td>
	<td>
		$time.strftime('%H:%M:%S', $time.gmtime(($autosub.CHECKSUB.interval - ($time.time() - $autosub.CHECKSUB.lastrun) ))) <br>
	</td>
</tr>
</table>
</body>
</html>
